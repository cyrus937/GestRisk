<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/log"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="170dp"
        android:layout_marginLeft="18dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="@dimen/size_text_title1"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/username"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:inputType="textPersonName"
            android:hint="username"
            android:textColorHint="@color/colorPrimary"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:background="@drawable/bg_round"
            android:padding="7dp"/>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="270dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="7dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_lock"
            android:inputType="textPassword"
            android:hint="password"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/bg_round"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/size_button_width"
            android:layout_height="@dimen/size_button_height"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:padding="1dp"
            android:text="Sign in"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CrÃ©er un compte"
            android:padding="9dp"
            android:textAppearance="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="italic"
            android:linksClickable="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>