<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Controller.SignUpActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="65dp"
            android:text="NOM :"/>

        <EditText
            android:id="@+id/nom"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_round"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:text="PRENOM :"/>

        <EditText
            android:id="@+id/prenom"
            android:layout_width="213dp"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="55dp"
            android:text="POSTE :"/>

        <EditText
            android:id="@+id/poste"
            android:layout_width="213dp"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            android:ems="10"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZONE DE\n TRAVAIL :"/>

        <EditText
            android:id="@+id/zone"
            android:layout_width="213dp"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:background="@drawable/bg_round"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="65dp"
            android:text="E-mail :"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_round"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:ems="10"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:text="PassWord :"/>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:background="@drawable/bg_round"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="12dp"
            android:text="PassWord\n Confirmation:"/>

        <EditText
            android:id="@+id/pwd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            android:ems="10"
            android:paddingLeft="15dp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_linear_layout_marginTop2">
        <Button
            android:id="@+id/cancel"
            android:layout_width="@dimen/size_button_width"
            android:layout_height="@dimen/size_button_height"
            android:background="@drawable/border"
            android:text="Annuler"
            android:textColor="@android:color/white"
            android:layout_marginRight="120dp"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="@dimen/size_button_width"
            android:layout_height="@dimen/size_button_height"
            android:background="@drawable/border"
            android:text="Valider"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>